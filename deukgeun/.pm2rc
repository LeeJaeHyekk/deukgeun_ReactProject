# PM2 런타임 설정 파일
# Windows에서 CMD 창이 반복 열리는 문제를 해결하기 위한 설정

# 로그 설정
log_date_format=YYYY-MM-DD HH:mm:ss Z
merge_logs=true

# Windows 전용 설정
windows_hide=true
windows_show=false

# 프로세스 관리 설정
autorestart=false
watch=false
max_memory_restart=2G

# 로그 로테이션 설정
log_rotate_max_size=10M
log_rotate_retain=5
log_rotate_compress=true

# 모니터링 설정
monitoring=true
monitoring_interval=30000

# 재시작 정책
restart_delay=5000
max_restarts=5
min_uptime=30s

# 프로세스 그룹 설정
kill_timeout=5000
wait_ready=true
listen_timeout=10000
