# Vite 설정 파일
# 빌드 최적화를 위한 추가 설정

# 개발 서버 설정
dev:
  port: 5173
  host: true
  open: false

# 빌드 설정
build:
  minify: terser
  sourcemap: false
  rollupOptions:
    output:
      manualChunks:
        vendor: ['react', 'react-dom', 'react-router-dom']
        ui: ['@radix-ui/react-dialog', '@radix-ui/react-dropdown-menu']
        utils: ['axios', 'date-fns', 'clsx']

# 최적화 설정
optimizeDeps:
  include:
    - react
    - react-dom
    - react-router-dom
    - axios
    - lucide-react
