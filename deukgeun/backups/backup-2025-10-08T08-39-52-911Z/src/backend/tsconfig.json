{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": ["ES2020"],
    "outDir": "../../dist/backend",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,

    // TypeORM + TS5 안정화 핵심
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "useDefineForClassFields": false,

    // 런타임 경로 alias
    "baseUrl": "../",
    "paths": {
      "@types/*": ["shared/types/*"],
      "@config/*": ["backend/config/*"],
      "@controllers/*": ["backend/controllers/*"],
      "@entities/*": ["backend/entities/*"],
      "@middlewares/*": ["backend/middlewares/*"],
      "@routes/*": ["backend/routes/*"],
      "@services/*": ["backend/services/*"],
      "@utils/*": ["backend/utils/*"],
      "@transformers/*": ["backend/transformers/*"],
      "@transformers": ["backend/transformers/index"],
      "@dto/*": ["shared/types/dto/*"],
      "@dto": ["shared/types/dto/index"],
      "@shared/*": ["shared/*"],
      "@domains/*": ["backend/domains/*"],
      "@infrastructure/*": ["backend/infrastructure/*"],
      "@constants/*": ["shared/constants/*"],
      "@validation/*": ["shared/validation/*"],
      "@api/*": ["shared/api/*"]
    }
  },
  "include": [
    "./**/*", 
    "../shared/types/**/*",
    "../shared/constants/**/*",
    "../shared/validation/**/*"
  ],
  "exclude": [
    "node_modules", 
    "dist", 
    "build", 
    "**/*.js", 
    "**/*.jsx",
    "../frontend/**/*",
    "../shared/contexts/**/*",
    "../shared/hooks/**/*",
    "../shared/ui/**/*",
    "../shared/utils/**/*",
    "../shared/lib/recaptcha.ts",
    "../shared/lib/storage.ts",
    "../shared/lib/string.ts",
    "../shared/lib/toast.ts",
    "../shared/lib/date.ts",
    "../shared/lib/object.ts",
    "../shared/api/**/*",
    "../shared/config/imageMatchingConfig.ts"
  ]
}
