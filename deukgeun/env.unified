DB_PORT=3306
DB_USERNAME=root

# 개발환경 데이터베이스 비밀번호
DB_PASSWORD=Deukgeun6204_DB25

# 프로덕션환경 데이터베이스 비밀번호 (주석 해제하여 사용)
# DB_PASSWORD=your_production_password

DB_DATABASE=deukgeun_db

# ============================================================================
