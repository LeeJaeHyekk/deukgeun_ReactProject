# ============================================================================
# 📧 이메일 설정
# ============================================================================
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587

# 개발환경 이메일 설정 (기본값)
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_password

# 프로덕션환경 이메일 설정 (주석 해제하여 사용)
# EMAIL_USER=your_production_email@gmail.com
# EMAIL_PASS=your_production_app_password

# ============================================================================
# 🛡️ 보안 설정
# ============================================================================

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS 설정
# 개발환경 CORS (기본값)
CORS_ORIGIN=http://localhost:3000,http://localhost:5173,http://localhost:5000,http://localhost:5001,http://127.0.0.1:3000,http://127.0.0.1:5173,http://127.0.0.1:5000,http://127.0.0.1:5001

# 프로덕션환경 CORS (주석 해제하여 사용)
# CORS_ORIGIN=https://devtrail.net,https://www.devtrail.net,http://43.203.30.167:3000,http://43.203.30.167:5000

# ============================================================================
# 📊 로깅 설정
# ============================================================================

# 개발환경 로깅 (기본값)
LOG_LEVEL=debug

# 프로덕션환경 로깅 (주석 해제하여 사용)
# LOG_LEVEL=info

LOG_FILE=./logs/app.log

# ============================================================================
# 📈 모니터링 설정
# ============================================================================

# 개발환경 모니터링 (기본값)
ENABLE_MONITORING=false

# 프로덕션환경 모니터링 (주석 해제하여 사용)
# ENABLE_MONITORING=true

MONITORING_PORT=9090

# ============================================================================
# 📁 파일 업로드 설정
# ============================================================================
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=10485760

# ============================================================================
# ⏰ 스케줄러 설정
# ============================================================================

# 개발환경 스케줄러 (기본값)
AUTO_UPDATE_ENABLED=false

# 프로덕션환경 스케줄러 (주석 해제하여 사용)
# AUTO_UPDATE_ENABLED=true

AUTO_UPDATE_HOUR=6
AUTO_UPDATE_MINUTE=0
AUTO_UPDATE_TYPE=enhanced
AUTO_UPDATE_INTERVAL_DAYS=3

# ============================================================================
# 🎯 환경 전환 가이드
# ============================================================================
# 
# 개발환경 → 프로덕션환경 전환:
# 1. NODE_ENV와 MODE를 production으로 변경
# 2. VITE_FRONTEND_URL과 VITE_BACKEND_URL을 프로덕션 URL로 변경
# 3. JWT 시크릿을 프로덕션용으로 변경
# 4. CORS_ORIGIN을 프로덕션 도메인으로 변경
# 5. LOG_LEVEL을 info로 변경
# 6. ENABLE_MONITORING을 true로 변경
# 7. AUTO_UPDATE_ENABLED를 true로 변경
#
# 프로덕션환경 → 개발환경 전환:
# 1. NODE_ENV와 MODE를 development로 변경
# 2. VITE_FRONTEND_URL과 VITE_BACKEND_URL을 localhost로 변경
# 3. JWT 시크릿을 개발용으로 변경
# 4. CORS_ORIGIN을 localhost로 변경
# 5. LOG_LEVEL을 debug로 변경
# 6. ENABLE_MONITORING을 false로 변경
# 7. AUTO_UPDATE_ENABLED를 false로 변경
#
# ============================================================================
