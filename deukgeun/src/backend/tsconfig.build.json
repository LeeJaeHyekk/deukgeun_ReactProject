{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "lib": ["ES2020"],
    "outDir": "../../dist/backend",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": false,
    "noEmit": false,
    "isolatedModules": false,
    "moduleDetection": "force",
    "noEmitOnError": false,
    "removeComments": true,
    "sourceMap": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "useDefineForClassFields": false,
    "baseUrl": ".",
    "paths": {
      // 백엔드 모듈 경로 (빌드용)
      "@backend/*": ["./*"],
      "@backend/config/*": ["./config/*"],
      "@backend/controllers/*": ["./controllers/*"],
      "@backend/entities/*": ["./entities/*"],
      "@backend/middlewares/*": ["./middlewares/*"],
      "@backend/routes/*": ["./routes/*"],
      "@backend/services/*": ["./services/*"],
      "@backend/utils/*": ["./utils/*"],
      "@backend/transformers/*": ["./transformers/*"],
      "@backend/types/*": ["./types/*"],
      "@backend/modules/*": ["./modules/*"],
      "@backend/modules/server/*": ["./modules/server/*"],
      
      // 공유 모듈 경로
      "@shared/*": ["../shared/*"],
      "@shared/types/*": ["../shared/types/*"],
      "@shared/utils/*": ["../shared/utils/*"],
      "@shared/constants/*": ["../shared/constants/*"],
      "@shared/validation/*": ["../shared/validation/*"],
      "@shared/api/*": ["../shared/api/*"]
    }
  },
  "include": [
    "./index.ts",
    "./app.ts",
    "./**/*.ts"
  ],
  "exclude": [
    "node_modules", 
    "node_modules/**/*",
    "dist", 
    "build", 
    "**/*.js", 
    "**/*.jsx",
    "../frontend/**/*",
    "../shared/**/*"
  ]
}
