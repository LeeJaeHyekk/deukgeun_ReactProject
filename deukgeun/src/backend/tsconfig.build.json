{
  "compilerOptions": {
    "outDir": "../../dist/backend",
    "module": "CommonJS",
    "moduleDetection": "force",
    "moduleResolution": "node",
    "noEmitOnError": false,
    "target": "ES2020",
    "lib": ["ES2020"],
    "removeComments": true,
    "sourceMap": false,
    "declaration": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "useDefineForClassFields": false,
    "strict": true,
    "noEmit": false,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@/config/*": ["./config/*"],
      "@/controllers/*": ["./controllers/*"],
      "@/entities/*": ["./entities/*"],
      "@/middlewares/*": ["./middlewares/*"],
      "@/routes/*": ["./routes/*"],
      "@/services/*": ["./services/*"],
      "@/utils/*": ["./utils/*"],
      "@/transformers/*": ["./transformers/*"],
      "@/types/*": ["./types/*"],
      "@/modules/*": ["./modules/*"],
      "@/modules/server/*": ["./modules/server/*"],
      "@shared/*": ["../shared/*"],
      "@shared/types/*": ["../shared/types/*"],
      "@shared/utils/*": ["../shared/utils/*"],
      "@shared/constants/*": ["../shared/constants/*"],
      "@shared/validation/*": ["../shared/validation/*"],
      "@shared/api/*": ["../shared/api/*"],
      "@backend/*": ["./*"],
      "@backend/modules/*": ["./modules/*"],
      "@backend/modules/server/*": ["./modules/server/*"]
    }
  },
  "include": [
    "./**/*", 
    "../shared/types/dto/**/*",
    "../shared/types/common.ts",
    "../shared/types/index.ts",
    "../shared/validation/**/*"
  ],
  "exclude": [
    "node_modules", 
    "node_modules/**/*",
    "dist", 
    "build", 
    "**/*.js", 
    "**/*.jsx",
    "../frontend/**/*",
    "../shared/contexts/**/*",
    "../shared/hooks/**/*",
    "../shared/ui/**/*",
    "../shared/lib/recaptcha.ts",
    "../shared/lib/storage.ts",
    "../shared/lib/string.ts",
    "../shared/lib/toast.ts",
    "../shared/lib/date.ts",
    "../shared/lib/object.ts",
    "../shared/api/**/*",
    "../shared/config/imageMatchingConfig.ts",
    "../shared/constants/validation.ts",
    "../shared/types/components.ts",
    "../shared/utils/storage.ts",
    "../shared/utils/apiValidation.ts",
    "../shared/utils/envValidator.ts",
    "../shared/utils/**/*"
  ]
}
