{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "node",
    "lib": ["ES2022"],
    "outDir": "../../dist",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": false,
    "noEmit": false,
    "isolatedModules": true,

    // TypeORM + TS5 안정화 핵심
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "useDefineForClassFields": false,

    // 최적화된 절대 경로 설정
    "baseUrl": ".",
    "paths": {
      // 백엔드 모듈 경로 (최적화)
      "@/*": ["./*"],
      "@/config/*": ["./config/*"],
      "@/controllers/*": ["./controllers/*"],
      "@/entities/*": ["./entities/*"],
      "@/middlewares/*": ["./middlewares/*"],
      "@/routes/*": ["./routes/*"],
      "@/services/*": ["./services/*"],
      "@/utils/*": ["./utils/*"],
      "@/transformers/*": ["./transformers/*"],
      "@/types/*": ["./types/*"],
      "@/modules/*": ["./modules/*"],
      "@/modules/server/*": ["./modules/server/*"],
      
      // 공유 모듈 경로
      "@shared/*": ["../shared/*"],
      "@shared/types/*": ["../shared/types/*"],
      "@shared/utils/*": ["../shared/utils/*"],
      "@shared/constants/*": ["../shared/constants/*"],
      "@shared/validation/*": ["../shared/validation/*"],
      "@shared/api/*": ["../shared/api/*"],
      
      // 레거시 호환성 (점진적 제거 예정)
      "@backend/*": ["./*"],
      "@backend/modules/*": ["./modules/*"],
      "@backend/modules/server/*": ["./modules/server/*"]
    }
  },
  "include": [
    "./**/*", 
    "../shared/types/dto/**/*",
    "../shared/types/common.ts",
    "../shared/types/index.ts",
    "../shared/validation/**/*"
  ],
  "exclude": [
    "node_modules", 
    "node_modules/**/*",
    "dist", 
    "build", 
    "**/*.js", 
    "**/*.jsx",
    "../frontend/**/*",
    "../shared/contexts/**/*",
    "../shared/hooks/**/*",
    "../shared/ui/**/*",
    "../shared/lib/recaptcha.ts",
    "../shared/lib/storage.ts",
    "../shared/lib/string.ts",
    "../shared/lib/toast.ts",
    "../shared/lib/date.ts",
    "../shared/lib/object.ts",
    "../shared/api/**/*",
    "../shared/config/imageMatchingConfig.ts",
    "../shared/constants/validation.ts",
    "../shared/types/components.ts",
    "../shared/utils/storage.ts",
    "../shared/utils/apiValidation.ts",
    "../shared/utils/envValidator.ts",
    "../shared/utils/**/*"
  ]
}
