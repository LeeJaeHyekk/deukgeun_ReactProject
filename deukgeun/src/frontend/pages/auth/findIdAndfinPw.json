{
  "account_recovery_system": {
    "find_id": {
      "input_fields": ["name", "phone", "gender", "birthday"],
      "process": [
        "입력값 유효성 검증 (필수값, 형식 검증)",
        "DB에서 name, phone, gender, birthday 모두 일치하는 유저 검색",
        "일치하면 username(아이디)을 마스킹 처리하여 반환",
        "불일치 시 오류 메시지 반환"
      ],
      "api_endpoint": "POST /api/auth/find-id",
      "response_example": {
        "success": {
          "message": "아이디 조회 성공",
          "data": { "username": "abc****" }
        },
        "failure": {
          "message": "입력하신 정보와 일치하는 계정을 찾을 수 없습니다."
        }
      }
    },
    "reset_password": {
      "input_fields": [
        "username",
        "name",
        "phone",
        "birthday",
        "recaptchaToken"
      ],
      "process": [
        "입력값 유효성 검증 (필수값, 형식 검증)",
        "reCAPTCHA 토큰 서버 검증",
        "DB에서 username, name, phone, birthday 모두 일치하는 유저 검색",
        "일치하면 비밀번호 재설정 토큰 발급",
        "비밀번호 재설정 토큰 검증 후 새 비밀번호 입력 및 저장",
        "비밀번호는 강도 검사 후 bcrypt 해시 처리 저장"
      ],
      "api_endpoints": {
        "POST /api/auth/reset-password/request": "비밀번호 재설정 토큰 발급 요청",
        "POST /api/auth/reset-password/complete": "토큰 검증 후 새 비밀번호 저장"
      },
      "response_example": {
        "success": {
          "message": "비밀번호 재설정 토큰이 발급되었습니다."
        },
        "reset_success": {
          "message": "비밀번호가 성공적으로 변경되었습니다."
        },
        "failure": {
          "message": "입력하신 정보와 일치하는 계정을 찾을 수 없습니다."
        },
        "recaptcha_failure": {
          "message": "reCAPTCHA 인증에 실패했습니다."
        },
        "token_failure": {
          "message": "유효하지 않은 토큰입니다."
        }
      }
    },
    "security_enhancements": {
      "rate_limiting": {
        "find_id": "5회/시간/IP",
        "reset_password_request": "3회/시간/IP",
        "reset_password_complete": "5회/시간/IP"
      },
      "data_protection": {
        "username_masking": "abc****",
        "phone_masking": "010-****-5678"
      },
      "token_management": {
        "reset_token_expiry": "10분",
        "secure_token_storage": "httpOnly 쿠키 또는 Authorization 헤더"
      }
    }
  }
}
