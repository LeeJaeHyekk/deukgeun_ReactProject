{
  "지도_띄우기_기본_단계": {
    "지도_영역_생성": {
      "설명": "지도를 담기 위한 영역 생성",
      "예시": "<div id=\"map\" style=\"width:500px;height:400px;\"></div>",
      "비고": "id는 'map' 으로 지정"
    },
    "Javascript_API_불러오기": {
      "설명": "Kakao 지도 Javascript API를 불러오는 스크립트 태그",
      "예시": "<script type=\"text/javascript\" src=\"//dapi.kakao.com/v2/maps/sdk.js?appkey=발급받은 APP KEY를 넣으시면 됩니다.\"></script>",
      "비고": "상대 프로토콜 사용으로 http/https 자동 대응, 실행 코드보다 먼저 선언 필요"
    },
    "지도_생성_코드": {
      "설명": "JavaScript로 지도 객체 생성",
      "예시": "var container = document.getElementById('map');\nvar options = {\n  center: new kakao.maps.LatLng(33.450701, 126.570667),\n  level: 3\n};\nvar map = new kakao.maps.Map(container, options);",
      "비고": "center는 위도(latitude), 경도(longitude) 순으로 LatLng 객체 생성 필요"
    },
    "전체_예시": "<!DOCTYPE html>\n<html>\n<head>\n  <meta charset=\"utf-8\"/>\n  <title>Kakao 지도 시작하기</title>\n</head>\n<body>\n  <div id=\"map\" style=\"width:500px;height:400px;\"></div>\n  <script type=\"text/javascript\" src=\"//dapi.kakao.com/v2/maps/sdk.js?appkey=발급받은 APP KEY를 넣으시면 됩니다.\"></script>\n  <script>\n    var container = document.getElementById('map');\n    var options = {\n      center: new kakao.maps.LatLng(33.450701, 126.570667),\n      level: 3\n    };\n    var map = new kakao.maps.Map(container, options);\n  </script>\n</body>\n</html>"
  },
  "라이브러리_사용하기": {
    "지도_라이브러리_개요": {
      "설명": "Kakao 지도 API는 추가 기능을 라이브러리 형태로 제공",
      "라이브러리_종류": {
        "clusterer": "마커 클러스터링 기능",
        "services": "장소 검색 및 주소-좌표 변환 기능",
        "drawing": "지도 위 그래픽스 및 마커 그리기 기능"
      },
      "추가예정": "라이브러리는 계속 추가 예정"
    },
    "라이브러리_불러오기": {
      "설명": "API 스크립트 로드 시 libraries 파라미터에 라이브러리 이름 추가",
      "예시": [
        "<script type=\"text/javascript\" src=\"//dapi.kakao.com/v2/maps/sdk.js?appkey=APIKEY&libraries=services\"></script>",
        "<script type=\"text/javascript\" src=\"//dapi.kakao.com/v2/maps/sdk.js?appkey=APIKEY&libraries=services,clusterer,drawing\"></script>"
      ]
    }
  },
  "지도_URL": {
    "설명": "특정 위치를 표시하고 Kakao 지도 또는 모바일웹 지도에서 크게보기 및 길찾기로 연결할 수 있는 URL",
    "특징": "사용자 환경에 따라 PC 버전 또는 모바일웹 버전 자동 연결",
    "종류": {
      "지도_바로가기": {
        "URL_Pattern": "/link/map/위도,경도",
        "예시": "https://map.kakao.com/link/map/37.3952969470752,127.110449292622",
        "추가": [
          {
            "패턴": "/link/map/이름,위도,경도",
            "예시": "https://map.kakao.com/link/map/카카오판교아지트,37.3952969470752,127.110449292622"
          },
          {
            "패턴": "/link/map/장소ID",
            "예시": "https://map.kakao.com/link/map/18577297"
          }
        ]
      },
      "길찾기_바로가기": {
        "설명": "출발지, 경유지, 목적지로 지정해 길찾기 URL 생성 가능",
        "이동수단_종류": ["car", "traffic", "walk", "bicycle"],
        "제한사항": {
          "경유지_최대": 5,
          "대중교통_경유지_불가": true
        },
        "예시": [
          {
            "패턴": "/link/to/이름,위도,경도",
            "예시": "https://map.kakao.com/link/to/카카오판교아지트,37.3952969470752,127.110449292622"
          },
          {
            "패턴": "/link/to/장소ID",
            "예시": "https://map.kakao.com/link/to/18577297"
          },
          {
            "패턴": "/link/from/이름,위도,경도/to/이름,위도,경도",
            "예시": "https://map.kakao.com/link/from/에이치스퀘어,37.402056,127.108212/to/카카오판교아지트,37.3952969470752,127.110449292622"
          },
          {
            "패턴": "/link/by/{이동수단}/이름,위도,경도/이름,위도,경도",
            "예시": "https://map.kakao.com/link/by/car/에이치스퀘어,37.402056,127.108212/카카오판교아지트,37.3952969470752,127.110449292622"
          },
          {
            "패턴": "/link/by/{이동수단}/이름,위도,경도/이름,위도,경도/이름,위도,경도",
            "예시": "https://map.kakao.com/link/by/walk/에이치스퀘어,37.402056,127.108212/알파돔타워,37.394245407468,127.110306812433/카카오판교아지트,37.3952969470752,127.110449292622"
          },
          {
            "패턴": "/link/by/subway/{지역명}/출발역명/도착역명",
            "예시": "https://map.kakao.com/link/by/subway/seoul/판교역/강남역"
          }
        ]
      },
      "로드뷰_바로가기": {
        "설명": "특정 위치의 로드뷰 바로 실행 URL 생성",
        "예시": [
          {
            "패턴": "/link/roadview/위도,경도",
            "예시": "https://map.kakao.com/link/roadview/37.3952969470752,127.110449292622"
          },
          {
            "패턴": "/link/roadview/장소ID",
            "예시": "https://map.kakao.com/link/roadview/18577297"
          }
        ]
      },
      "지도_검색결과_바로가기": {
        "설명": "검색어를 이용해 검색결과를 표시한 상태의 URL 생성",
        "예시": {
          "패턴": "/link/search/검색어",
          "예시_URL": "https://map.kakao.com/link/search/카카오"
        }
      }
    }
  }
}
