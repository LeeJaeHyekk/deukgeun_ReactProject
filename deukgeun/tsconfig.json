{
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "@/*": ["./*"],
      "@frontend/*": ["frontend/*"],
      "@backend/*": ["backend/*"],
      "@shared/*": ["shared/*"],
      "@features/*": ["frontend/features/*"],
      "@pages/*": ["frontend/pages/*"],
      "@widgets/*": ["frontend/widgets/*"],
      "@entities/*": ["frontend/entities/*"],
      "@assets/*": ["frontend/assets/*"],
      "@components/*": ["frontend/shared/components/*"],
      "@hooks/*": ["frontend/shared/hooks/*"],
      "@utils/*": ["frontend/shared/utils/*"],
      "@types/*": ["shared/types/*"],
      "@constants/*": ["shared/constants/*"],
      "@validation/*": ["shared/validation/*"],
      "@api/*": ["shared/api/*"],
      "@dto/*": ["shared/types/dto/*"],
      "@entities-backend/*": ["backend/entities/*"],
      "@transformers/*": ["backend/transformers/*"],
      "@services/*": ["backend/services/*"],
      "@controllers/*": ["backend/controllers/*"],
      "@domains/*": ["backend/domains/*"],
      "@infrastructure/*": ["backend/infrastructure/*"],
      "@config/*": ["backend/config/*"],
      "@middlewares/*": ["backend/middlewares/*"],
      "@routes/*": ["backend/routes/*"]
    },
    "typeRoots": ["./node_modules/@types"],
    "target": "ESNext",
    "module": "ESNext",
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "exactOptionalPropertyTypes": false,
    "skipLibCheck": true,
    "noEmit": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowJs": false,
    "checkJs": false,
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "types": ["node"]
  },
  "include": [
    "src/frontend/**/*",
    "src/shared/**/*"
  ],
  "exclude": [
    "node_modules", 
    "src/backend/node_modules",
    "src/backend/node_modules/**/*",
    "dist", 
    "build", 
    "**/*.js", 
    "**/*.jsx"
  ]
}
