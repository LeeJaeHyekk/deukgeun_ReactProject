{
  "compilerOptions": {
    "baseUrl": "./src/frontend",
    "paths": {
      "@/*": ["./*"],
      "@app/*": ["app/*"],
      "@pages/*": ["pages/*"],
      "@widgets/*": ["widgets/*"],
      "@features/*": ["features/*"],
      "@entities/*": ["entities/*"],
      "@shared/*": ["shared/*"],
      "@assets/*": ["assets/*"]
    },
    "typeRoots": ["./node_modules/@types", "./src/shared/types"],
    "target": "ESNext",
    "module": "ESNext",
    "jsx": "react-jsx",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "noEmit": true,
    "allowJs": false,
    "checkJs": false,
    "lib": ["ESNext", "DOM", "DOM.Iterable"]
  },
  "include": ["src/frontend/**/*"],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "**/*.js",
    "**/*.jsx",
    "src/backend/**/*"
  ]
}
