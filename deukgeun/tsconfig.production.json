{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "outDir": "./dist"
  },
  "include": [
    "src/frontend/**/*",
    "src/backend/**/*",
    "src/types/**/*",
    "src/shared/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "**/*.js",
    "**/*.jsx",
    "**/__tests__/**/*",
    "**/*.test.*",
    "**/*.spec.*",
    "**/mocks/**/*",
    "**/testSetup.ts",
    "**/testUtils.ts",
    "**/testUtils.tsx",
    "**/handlers.ts",
    "**/server.ts",
    "src/frontend/shared/utils/mocks/**/*",
    "src/frontend/shared/utils/testSetup.ts",
    "src/frontend/shared/utils/testUtils.ts",
    "src/frontend/shared/utils/testUtils.tsx"
  ]
}
