{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "noEmit": false,
    "outDir": "./dist/scripts",
    "lib": ["ES2020"],
    "types": ["node"]
  },
  "include": ["src/frontend/script/**/*"],
  "exclude": ["node_modules", "dist", "build"]
}
